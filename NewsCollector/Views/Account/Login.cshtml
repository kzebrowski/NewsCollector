@using NewsCollector.Models
@model LoginViewModel
@{
    /**/

    ViewBag.Title = "Log in";
}

<link rel="stylesheet" type="text/css" href="@Url.Content("~/Content/signIn.css")">
<div class="signInPage">
    @using (Html.BeginForm("Login", "Account", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
    {
        @Html.AntiForgeryToken()
        <div class="space"></div>
        <div class="containerLogin">
            <div class="login">
                <div class="loginTitle">Zaloguj się</div>
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })

                <p>
                    @Html.TextBoxFor(m => m.Email, new { placeholder = "Email", @class = "form-control" })
                    @Html.ValidationMessageFor(m => m.Email, "", new { @class = "text-danger" })
                </p>
                <p>
                    @Html.PasswordFor(m => m.Password, new { placeholder = "Hasło", @class = "form-control" })
                    @Html.ValidationMessageFor(m => m.Password, "", new { @class = "text-danger" })
                </p>
                <div class="remember_me">
                    <div class="checkbox">
                        @Html.CheckBoxFor(m => m.RememberMe, new { style = "margin-left:60px; margin-top:8px; margin-right:0px;vertical-align:middle;" })
                        @Html.LabelFor(m => m.RememberMe, new { style = "margin-left:auto; margin-right:50px;vertical-align:middle;" })
                    </div>
                </div>
                <p class="submitBtn"><input type="submit" name="commit" value="ZALOGUJ"></p>

            </div>
            <div class="login-help">
                <a>@Html.ActionLink("Zapomniałeś hasła?", "ForgotPassword")</a>
            </div>

        </div>
        <div class="regist">
            @Html.ActionLink("Zarajestruj się", "Register")
        </div>
    }
</div>
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}