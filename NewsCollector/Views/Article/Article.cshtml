@{
    ViewBag.Title = "Artykuł";
}
@model NewsCollector.Models.ArticleViewModel

<link rel="stylesheet" type="text/css" href="@Url.Content("~/Content/article.css")">

<h1 class="articleTitle">@Html.DisplayFor(model => model.Title)</h1>
<h3 class="lead leadParagraph">@Html.DisplayFor(model => model.LeadParagraph)</h3>
<div align="left" style="padding-left:40px"><a href="/article/exportpdf/@Model.Id"><span class="glyphicon glyphicon-print"></span></a></div>

<div class="articlePicture"></div>

<div class="articleContent">
    @Html.DisplayFor(model => model.Content)
    <br /><br />
    <h3 style="color:red">@ViewBag.Message</h3>
</div>

