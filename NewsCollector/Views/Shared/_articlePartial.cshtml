@{
    Layout = null;
}
@model NewsCollector.Models.ArticleViewModel

<div class="article iframe" data-link="/Article/Article/@Model.Id">
    <div style="background: transparent; width: auto;overflow: hidden;">
        <div style="width: 5%;max-height: 300px; ">
            <img src="https://images.unsplash.com/photo-1453282716202-de94e528067c?ixlib=rb-0.3.5&q=80&fm=jpg&crop=entropy&cs=tinysrgb&w=1600&h=900&fit=crop&s=c246cb5aaf5dcabd0afc187e36b4212c" style=" object-fit: cover;">
        </div>
        <div class="article">

            <div class="text">
                <h1 style="background-color: rgba(195, 195, 195, 0.8);">@Model.Title</h1>
                <br>
                <br>
                <h5 style="background-color: rgba(195, 195, 195, 0.8);">@Model.LeadParagraph</h5>
                <br>
                <br>
                <p style="background-color: rgba(195, 195, 195, 1);">
                    @Model.Content
                </p>
            </div>
        </div>
    </div>
</div>
